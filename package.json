{
  "name": "@alimd/1db",
  "version": "2.0.0-beta",
  "description": "Supper Fast and Simple NoSQL JSON Based Database with Memory Cache",
  "main": "dist/1db.js",
  "license": "MIT",
  "scripts": {
    "c": "yarn clean",
    "clean": "del-cli .tsbuildinfo dist",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "b": "yarn build",
    "build": "npm-run-all --serial clean build:ts lint",
    "build:ts": "tsc --build",
    "s": "yarn serve",
    "serve": "nodemon --inspect dist/index.js",
    "w": "yarn watch",
    "watch": "npm-run-all --parallel serve \"build:ts --watch --preserveWatchOutput\"",
    "deploy": "yarn build && ./deploy.sh"
  },
  "dependencies": {
    "debug": "^4.1.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.136",
    "@types/node": "^13.13.5",
    "del-cli": "^3.0.0",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "tslint": "^6.1.2",
    "typescript": "^3.8.3"
  }
}
