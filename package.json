{
  "name": "1db",
  "version": "1.0.0-rc",
  "description": "Supper Fast and Simple NoSQL JSON Based Database with Memory Cache",
  "main": "1db.js",
  "scripts": {
    "c": "yarn clean",
    "clean": "del-cli .tsbuildinfo dist",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "b": "yarn build",
    "build": "npm-run-all --serial clean build:ts lint",
    "build:ts": "tsc --build",
    "s": "yarn serve",
    "serve": "nodemon --inspect dist/index.js",
    "w": "yarn watch",
    "watch": "npm-run-all --parallel serve \"build:ts --watch --preserveWatchOutput\"",
    "deploy": "yarn build && ./deploy.sh"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/lodash": "^4.14.136",
    "lodash": "^4.17.15",
    "debug": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^12.7.1",
    "concurrently": "^4.1.1",
    "nodemon": "^1.13.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  },
  "license": "MIT"
}
